<%= form_tag update_address_cart_path, method: :post do %>
  <%= label_tag :address, "Address" %>
  <%= text_field_tag :address, @address ,required: true %>

  <%= label_tag :postal_code, "Postal Code" %>
  <%= text_field_tag :postal_code, @postal_code %>

  <%= label_tag :province, "Province" %>
  <%= select_tag :province, options_for_select(["Newfoundland and Labrador", "Nova Scotia", "Prince Edward Island", "New Brunswick", "Ontario", "Quebec", "Manitoba", "Saskatchewan", "Alberta", "British Columbia"]), selected: @province %>

  <%= submit_tag "Update Address" %>
  <% end %>