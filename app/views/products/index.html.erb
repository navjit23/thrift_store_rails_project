<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% if @products.present? %>
    <h2>Search Results</h2>
    <ul>
      <% @products.each do |product| %>
        <%= render product %>
      <p>
        <%= link_to "Show this product", product %>
      </p>
      <% end %>
    </ul>
  <% else %>
    <p>No products found.</p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
